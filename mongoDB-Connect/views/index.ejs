<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div align="center">
        <h2>Add Student Details</h2>
        <form method="post" action="/add-student">
            <table>
                <tr>
                    <td>Firstname: </td>
                    <td><input type="text" name="firstname" /> </td>
                </tr>
                <tr>
                    <td>Lastname: </td>
                    <td><input type="text" name="lastname" /> </td>
                </tr>
                <tr>
                    <td>Email: </td>
                    <td><input type="email" name="email" /> </td>
                </tr>
                <tr>
                    <td>Phone: </td>
                    <td><input type="text" name="phone" /> </td>
                </tr>
                <tr>
                    <td>Course: </td>
                    <td><input type="text" name="course" /> </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Add Student" /> </td>
                </tr>
            </table>
        </form>
    </div>
    <br/>
    <br/>
    <hr/>
    <br/>
    <br/>
    <div align="center">
    
        <table border="1">
            <tr>
                <th>#</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Course</th>
                <th colspan="2">Actions</th>
            </tr>
            <% students.map((student, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= student.firstname %></td>
                    <td><%= student.lastname %></td>
                    <td><%= student.email %></td>
                    <td><%= student.phone %></td>
                    <td><%= student.course %></td>
                    <td><a href="/editStudent/<%= student.id %>"><button>Edit</button></a></td>
                    <td><a href="/deleteStudent/<%= student.id %>"><button>Delete</button></a></td>
                </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>